@using System.Web.Services.Description
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon"/>
    <link href='http://webfonts.ru/import/vremena.css' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/")
</head>
<body>
<div>
    <header>
        <div id="head" class="centerContent">
            <div id="money">
                <div id="currentSumBorder" class="border textCenter">
                    <div id="currentSum">
                        <p>
                            Собрано <b id="gettedSum">10 000</b> рублей из <b>2 500 000</b>
                        </p>
                    </div>
                </div>
                <div id="projectHelpBorder">
                    <a href="/Home/FundRising">
                        <div id="projectHelp" class="orangeFill">
                            <p>
                                <b><i>Помочь проекту!</i></b>
                            </p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div id="logoMenu">
            <div id="logo">
                <img src="/Images/logo.svg" onerror=" this.onerror = null; this.src = 'image.png'; ">
            </div>
            <div id="navDiv" class="centerContent">
                <img src="/Images/frame.svg" onerror=" this.onerror = null; this.src = 'image.png'; ">
                <div>
                    <nav id="menu">
                        <ul>
                            <li>@Html.ActionLink("О проекте", "AboutProject", "Home")</li>
                            <li>@Html.ActionLink("Сбор средств", "FundRising", "Home")</li>
                            <li>@Html.ActionLink("Новости", "News", "Home")</li>
                            <li>@Html.ActionLink("Команда", "Team", "Home")</li>
                            <li>@Html.ActionLink("Партнёры", "Partners", "Home")</li>
                            <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <div id="content" class="borderContent centerContent">
        <div id="contentFiller"></div>
        @RenderSection("featured", required: false)
        @RenderBody()
    </div>
</div>
<div id="bottom">
    <img src="/Images/cross.svg" onerror=" this.onerror = null; this.src = 'image.png'; ">
    <div>
        <hr/>
    </div>
    <img src="/Images/cross.svg" onerror=" this.onerror = null; this.src = 'image.png'; ">
</div>
<footer>
    <div>
        <img src="/Images/footer.svg" onerror=" this.onerror = null; this.src = 'image.png'; ">
    </div>
</footer>

@Scripts.Render("~/bundles/jquery")
@RenderSection("scripts", required: false)
</body>
<script type="text/javascript">
    $('nav ul li').each(function() {
        if (this.getElementsByTagName("a")[0].href == location.href) {
            $(this).children("a")[0].className = "active";
        }
    });
</script>
</html>
