@model RussianHouse.ViewModel.UserDataViewModel

<div class="centerContent">
    <h2 class="VremenaText">
        @Model.Content.Title
    </h2>
    <p class="VremenaText">
        @Model.Content.Content
    </p>
</div>
<div class="centerContent">
    @Html.ValidationMessageFor(x => x.Email)
    <br />
    @using (Html.BeginForm("AddUserData", "Home", FormMethod.Post))
    {
        @Html.LabelFor(d => d.Email)
        <br />
        @Html.EditorFor(t => t.Email)
        <p><input type="submit" value="Создать запись!" /></p>
    }
    <br />
    <a href="/Home/SendEmailToAll">Отослать всех!</a>
</div>